@{
    ViewBag.Navigation = "Venta Rapida";
    ViewBag.Title = "Venta Rápida";
    string FechaActual = DateTime.Now.ToString("dd/MM/yyyy");
}

<!-- .row -->
<div class="col-sm-12" id="appVentaRapida">
    <div style="padding:1px;">
        <!-- Modal -->
        @Html.Partial("BuscarVentas")
    </div>
    <div class="row">
        <div class="col-lg-12">

            <div class="white-box">
                <div class="table-responsive">
                    <table class="table table-hover manage-u-table" id="tableMtbf" ref="#tableMtbf">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>DESCRIPCIÓN</th>
                                <th>PRECIO</th>
                                <th>CANTIDAD</th>
                                <th>SUB TOTAL</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="header" v-for="Detalle in list.Detalle">
                                <td width="4%" align="center"><input type="text" class="form-control" readonly v-model="Detalle.Item" /></td>
                                <td width="4%" align="center">
                                    <v-select v-model="Detalle.Descripcion"
                                              :options="list.Productos"
                                              index="Codigo"
                                              label="Descripcion"
                                              @@search="getProductos"
                                              @@keydown.13.native.prevent="$refs.Precio.focus()"
                                              placeholder="--Seleccione--"
                                              ref="Producto">
                                    </v-select>
                                </td>
                                <td width="4%" align="center"><input type="text" class="form-control" v-model="Detalle.Precio" ref="Precio" /></td>
                                <td width="4%" align="center"><input type="text" class="form-control" v-model="Detalle.Cantidad" /></td>
                                <td width="4%" align="center"><input type="text" class="form-control" readonly v-model="Detalle.SubTotal" /></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /.row -->
<!-- .row -->




@section scripts{

    <script>
        let _FechaActual = '@FechaActual'
        let _rutaInforme = '@Url.Action("Index", "Informe")'
        let _rutaLogin = '@Url.Action("Login", "Autenticacion")'
        let _rutaReporte = '@Url.Action("Report", "OrdenMasiva")'
        let _rutaReportePlantillaTemp = '@Url.Action("ReportPlantilla", "OrdenMasiva")'
    </script>
    <script src="~/wwwroot/js/Vue/Views/VentaRapida.js"></script>

}
